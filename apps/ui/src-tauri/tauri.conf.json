{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenSCAD Studio",
  "version": "0.4.0",
  "identifier": "com.openscad.studio",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenSCAD Studio",
        "width": 1400,
        "height": 900
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFBNTMyQTVGRjQ0ODg4RTIKUldUaWlFajBYeXBUR21PdG1RS0YrSytnY0pOdGpOeVZMZEFYZjlwVEM1bVVCV3pSSWh3ZTgzTUMK",
      "endpoints": [
        "https://github.com/zacharyfmarion/openscad-studio/releases/latest/download/latest.json"
      ]
    }
  }
}
