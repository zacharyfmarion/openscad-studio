{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:allow-set-title",
    "opener:default",
    "dialog:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-file",
    "fs:read-all",
    {
      "identifier": "fs:scope",
      "allow": ["$HOME/**", "$APPCACHE/**", "$CACHE/**", "/home/**", "/tmp/**"]
    },
    {
      "identifier": "core:app:allow-app-show",
      "allow": []
    },
    "updater:default",
    "process:allow-restart"
  ]
}
