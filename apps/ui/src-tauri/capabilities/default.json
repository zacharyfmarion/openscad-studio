{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-set-title",
    "opener:default",
    "dialog:default",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    {
      "identifier": "fs:scope",
      "allow": [
        "$HOME/**",
        "$APPCACHE/**"
      ]
    },
    {
      "identifier": "core:app:allow-app-show",
      "allow": []
    },
    "updater:default",
    "process:allow-restart"
  ]
}