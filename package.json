{
  "name": "openscad-studio",
  "version": "0.4.0",
  "private": true,
  "description": "Modern OpenSCAD editor with live preview and AI copilot",
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "dev": "cd apps/ui && pnpm dev",
    "build": "cd apps/ui && pnpm build",
    "tauri:dev": "cd apps/ui && pnpm tauri dev",
    "tauri:build": "cd apps/ui && pnpm tauri build",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "test:e2e": "wdio run ./wdio.conf.js",
    "test:e2e:build": "cd apps/ui && pnpm tauri build --debug && cd ../.. && pnpm test:e2e",
    "format": "pnpm format:ts && pnpm format:rust",
    "format:ts": "prettier --write \"apps/**/*.{ts,tsx,js,jsx,json,css}\" \"packages/**/*.{ts,tsx,js,jsx,json}\" \"tests/**/*.js\"",
    "format:rust": "cd apps/ui/src-tauri && cargo fmt",
    "format:check": "prettier --check \"apps/**/*.{ts,tsx,js,jsx,json,css}\" \"packages/**/*.{ts,tsx,js,jsx,json}\" \"tests/**/*.js\" && cd apps/ui/src-tauri && cargo fmt --check"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@wdio/cli": "^9.21.1",
    "@wdio/local-runner": "^9.21.0",
    "@wdio/mocha-framework": "^9.21.0",
    "@wdio/spec-reporter": "^9.20.0",
    "prettier": "^3.7.4"
  }
}
